{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",      
    "removeComments": true,             
    "strict": true,                   
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],

    "esModuleInterop": true,             
    "experimentalDecorators": true,     
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
  ]
}